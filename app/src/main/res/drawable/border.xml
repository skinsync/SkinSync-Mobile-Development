<?xml version="1.0" encoding="utf-8"?>
<!-- border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Border color and thickness -->
    <stroke
        android:width="1dp"
        android:color="#898485" />

    <!-- Corners radius -->
    <corners android:radius="3dp" />

    <!-- Shadow -->
    <padding
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp" />

    <corners android:radius="3dp" />
</shape>
