<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:shape="rectangle">
        <shape>
            <solid android:color="#F0F0F0" />
            <!-- Isian utama dengan transparansi 100% -->
            <solid android:color="#F0F0F0" />
            <!-- Stroke pertama dengan alpha (transparansi) 100% -->
            <stroke android:width="-1dp" android:color="#FEE0C0" />
            <!-- Stroke kedua dengan alpha (transparansi) 20% -->
            <stroke android:width="-1dp" android:color="#FEE0C0" android:alpha="0.2" />
            <!-- Corner radius sebesar 5dp -->
            <corners android:radius="5dp" />
        </shape>
    </item>
</selector>