<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:shape="rectangle">
        <shape>
            <!-- Efek drop shadow -->
            <size android:height="2dp" />
            <solid android:color="@color/whisper_blue" />
            <!-- Isian utama dengan transparansi 100% -->
            <solid android:color="@color/whisper_blue" />
            <!-- Stroke pertama dengan alpha (transparansi) 100% -->
            <stroke android:width="2dp" android:color="@color/whisper_blue" />
            <!-- Stroke kedua dengan alpha (transparansi) 20% -->
            <stroke android:width="2dp" android:color="@color/beige" android:alpha="0.2" />
            <!-- Corner radius sebesar 15dp -->
            <corners android:radius="15dp" />
        </shape>
    </item>
</selector>